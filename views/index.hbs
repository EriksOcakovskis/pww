<h1>{{title}}</h1>
<form action="/" method="post">
  <div class="row column">
    <h4 class="text-center">Enter your current weight in kilograms</h4>
    <label for="weight">Weight</label>
    <input id="weight" name="weight" placeholder="70" type="text" autofocus="true" required="true"></input>

    {{#if error}}
      <div class="alert callout">
        <p>
          {{error}}
        </p>
      </div>
    {{/if}}

    <input class="button expanded" type="submit" value="Submit"></input>
  </div>
</form>

<div class="chart-container">
  <canvas id="weightChart"></canvas>
</div>